#!/bin/bash

set -Eeuo pipefail

SCRIPT_DIR="$(dirname "$0")"
TARGET_SCRIPT="$SCRIPT_DIR/loanminnowdb"

# virtual env setup
python3 venv "$SCRIPT_DIR"/../.venv
source "$SCRIPT_DIR"/../.venv/bin/activate
pip install -r "$SCRIPT_DIR"/../requirements.txt

# db setup
"./$TARGET_SCRIPT" create

# npm setup
npm install --prefix "$SCRIPT_DIR"/../loanminnow
